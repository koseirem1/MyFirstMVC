@model IEnumerable<MyFirstMVC.Models.Category>

@{
    ViewBag.Title = "Kategoriler";
}

<h2>Kategoriler</h2>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary"> Yeni Kategori </a>
</p>

<table class="table table-striped table-hover  table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
               
                <td>
                    <a href="@Url.Action("Edit" ,new {id=item.Id}) " class="btn btn-success btn-sm">Düzenle</a>
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class="btn btn-sm btn-default"})
                    <a href="@Url.Action("Delete",new { id= item.Id})" class="btn btn-danger btn-sm" onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?');">Sil</a>
                </td>
                
            </tr>
        }
    </tbody>

</table>
