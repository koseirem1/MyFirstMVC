@model IEnumerable<MyFirstMVC.Models.Project>
@{
    ViewBag.Title = "Projeler";

}
<h2>Projeler</h2>
<a href="@Url.Action("Create")" class="btn btn-primary"> Yeni Proje </a>
<table class="table table-striped table-hover  table-condensed">
    <!--table-bordered da yazılabilir.-->
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th> @Html.DisplayNameFor(model => model.Photo)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th> @Html.DisplayNameFor(model => model.Description)</th>
            <th> @Html.DisplayNameFor(model => model.CategoryId)</th>
            <th>Eylemler</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td> <img src="/images/@item.Photo" width="50" /></td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                <td><a href="@Url.Action("Edit" ,new {id=item.Id}) " class="btn btn-success btn-sm">Düzenle</a> 
                <a href="@Url.Action("Delete",new { id= item.Id})" class="btn btn-danger btn-sm" onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?');">Sil</a> </td>
                


                <!--
                     <td>@item.Id</td>
                  <td> <img height="50" width="50" src="/images/@item.Photo" class="card-img-top" alt="@item.Title "></td>
                  <td>@item.Title</td>
                  <td>@item.Description</td>
                -->

            </tr>

        }
    </tbody>
</table>

